# Ambiente da aplicação (development, staging, production)
APP_ENV=production

# Debug mode (true, false)
APP_DEBUG=false

# URL base da aplicação
BASE_URL=/nata-do-campo

# Configurações do banco de dados
DB_SERVER=localhost
DB_USERNAME=root
DB_PASSWORD=
DB_NAME=nata_do_campo

# Chaves de segurança (gere valores aleatórios em produção!)
JWT_SECRET=
PASSWORD_PEPPER=

# Configurações de sessão
SESSION_LIFETIME=3600 # 1 hora em segundos

# Configurações de log (debug, info, warning, error, critical)
LOG_LEVEL=error

# Configurações de upload
MAX_UPLOAD_SIZE=5242880 # 5MB em bytes